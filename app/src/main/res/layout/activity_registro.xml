<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAE57C"
    tools:context=".Registro">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#28527A"
        android:fontFamily="monospace"
        android:text="REGRESAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:backgroundTint="#28527A"
        android:fontFamily="monospace"
        android:text="GUARDAR INFORMACIÓN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="number"
        android:text="Cedula"
        android:textColor="#28527A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_guardar" />

    <EditText
        android:id="@+id/input_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="text"
        android:text="Nombre"
        android:textColor="#28527A"
        app:layout_constraintStart_toStartOf="@+id/input_id"
        app:layout_constraintTop_toBottomOf="@+id/input_id" />

    <EditText
        android:id="@+id/input_apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="text"
        android:text="Apellido"
        android:textColor="#28527A"
        app:layout_constraintBottom_toTopOf="@+id/input_correo"
        app:layout_constraintStart_toStartOf="@+id/input_correo" />

    <EditText
        android:id="@+id/input_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textEmailAddress"
        android:text="Correo"
        android:textColor="#28527A"
        app:layout_constraintBottom_toTopOf="@+id/input_telefono"
        app:layout_constraintEnd_toEndOf="@+id/input_telefono" />

    <EditText
        android:id="@+id/input_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="phone"
        android:text="Telefono"
        android:textColor="#28527A"
        app:layout_constraintBottom_toTopOf="@+id/input_contraseña"
        app:layout_constraintStart_toStartOf="@+id/input_contraseña" />

    <EditText
        android:id="@+id/input_contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textPassword"
        android:text="Contraseña"
        android:textColor="#28527A"
        app:layout_constraintBottom_toTopOf="@+id/btn_registrar"
        app:layout_constraintStart_toStartOf="@+id/btn_registrar" />

    <TextView
        android:id="@+id/btn_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="9dp"
        android:fontFamily="monospace"
        android:text="REGISTRO"
        android:textColor="#28527A"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />
</androidx.constraintlayout.widget.ConstraintLayout>